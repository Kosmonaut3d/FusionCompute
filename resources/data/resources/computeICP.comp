	o_struct outputData;
	outputData.o_a1 = vec3(1,0,0);
	outputData.o_a2 = vec3(3,3,3);
	outputData.o_b = 2;

	o_d[currentCount] = outputData;

	imageStore(correspondence, pixel_coords, vec4(normalOldWorld, 1));
